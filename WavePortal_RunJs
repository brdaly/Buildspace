
const main = async() => {

    //Compile Smart Contract 
    const contractFactory = await hre.ethers.getContractFactory("MyEthProject");
    
    //Deploy Contract to local node:
    const contract = await contractFactory.deploy();
    
    //Confirm when it's done deploying 
    //Confirmation of mining complete
    await contract.deployed();
    
    console.log("Successfully Deployed!! Contract Address:", contract.address);
    
    let txn = await contract.wave();
    await txn.wait();

    txn = await contract.wave();
    await txn.wait();

    }
    
    const runMain = async () => {
        try {
            await main();
            process.exit(0);
        }   catch (error) {
            console.log(error);
            process.exit(1);
        }
    };
    
    runMain();
